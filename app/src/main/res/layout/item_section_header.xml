<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="-12.0dip"
    android:gravity="end|bottom|center"
    android:minHeight="@dimen/touch_target_min_size"
    android:orientation="horizontal"
    android:paddingBottom="12.0dip"
    android:paddingTop="@dimen/card_item_vertical_offset">

    <LinearLayout
        android:layout_width="0.0dip"
        android:layout_height="wrap_content"
        android:layout_weight="1.0"
        android:orientation="vertical"
        android:paddingBottom="@dimen/item_collapsed_margin"
        android:paddingLeft="@dimen/section_headline_left_padding"
        android:paddingRight="@dimen/item_collapsed_margin"
        android:paddingTop="@dimen/item_collapsed_margin">

        <TextView
            android:id="@+id/section_header_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="?android:selectableItemBackground"
            android:drawablePadding="@dimen/item_drawable_padding"
            android:ellipsize="end"
            android:singleLine="true"
            android:textAppearance="@style/SectionHeaderTextAppearance" />

        <TextView
            android:id="@+id/section_header_subtitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="?android:selectableItemBackground"
            android:drawablePadding="@dimen/item_drawable_padding"
            android:textAppearance="@style/SectionHeaderTextAppearance"
            android:textSize="12.0sp"
            android:textStyle="italic" />
    </LinearLayout>

    <ImageButton
        android:id="@+id/section_header_overflow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:contentDescription="@string/section_header_menu_description"
        android:padding="@dimen/item_collapsed_margin"
        android:src="@drawable/ic_more_horiz_white_18dp"
        />
</LinearLayout>