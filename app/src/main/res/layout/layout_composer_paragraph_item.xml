<?xml version="1.0" encoding="utf-8"?>
<com.haiyunshan.zima.composer.widget.ParagraphView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clipToPadding="false"
    android:gravity="center"
    android:orientation="vertical"
    android:paddingBottom="@dimen/composer_paragraph_item_padding_bottom"
    android:paddingLeft="@dimen/composer_paragraph_item_padding_left"
    android:paddingRight="@dimen/composer_paragraph_item_padding_right"
    android:paddingTop="@dimen/composer_paragraph_item_padding_top">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="@color/composer_paragraph_background_color"
        app:cardCornerRadius="@dimen/composer_paragraph_card_corner_radius"
        app:cardElevation="@dimen/composer_paragraph_card_elevation">

        <com.haiyunshan.zima.composer.widget.ParagraphEditText
            android:id="@+id/edit_paragraph"
            style="@style/ParagraphTextStyle" />

    </android.support.v7.widget.CardView>


</com.haiyunshan.zima.composer.widget.ParagraphView>