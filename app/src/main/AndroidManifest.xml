<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.haiyunshan.zima">

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".ZimaApp"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/ZimaAppTheme">
        <activity
            android:name=".ComposerActivity"
            android:windowSoftInputMode="adjustResize|stateHidden" />
        <activity android:name=".NoteActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".test.TestAlignmentActivity"></activity>
        <activity android:name=".test.TestColorPickActivity"></activity>
        <activity android:name=".test.TestTouchActivity">

        </activity>
        <activity android:name=".test.TestHtmlActivity">

        </activity>
    </application>

</manifest>